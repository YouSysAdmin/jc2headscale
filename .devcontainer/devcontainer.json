{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": "true"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.23"
    },
    // needs for linters, etc. tools
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "true" // set to 'false' for build from source code
    }
  },
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "customizations": {
    // Well, if you suddenly want to use VSCode. :)
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": ["golang.Go"]
    }
  },
  "postCreateCommand": {
    "nvim-configs": "mkdir -p ~/.config && cp -r /usr/local/share/nvim/configs ~/.config/nvim",
    "go-root-permission": "sudo chown -R vscode:vscode /go"
  },
  "postStartCommand": {},
  "remoteUser": "vscode"
}
